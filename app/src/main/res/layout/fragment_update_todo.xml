<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.UpdateTodoFragment">

    <EditText
        android:id="@+id/etTodoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:hint="@string/type_task"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvImportantLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Important level "
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/etTodoTitle"
        app:layout_constraintTop_toBottomOf="@id/etTodoTitle" />

    <ImageView
        android:id="@+id/imgImportantLevelOne"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/yellow_dot"
        android:src="@drawable/ic_done"
        app:layout_constraintBottom_toBottomOf="@id/tvImportantLevel"
        app:layout_constraintStart_toEndOf="@id/tvImportantLevel"
        app:layout_constraintTop_toTopOf="@id/tvImportantLevel" />

    <ImageView
        android:id="@+id/imgImportantLevelTwo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/blue_dot"
        app:layout_constraintBottom_toBottomOf="@id/imgImportantLevelOne"
        app:layout_constraintStart_toEndOf="@id/imgImportantLevelOne"
        app:layout_constraintTop_toTopOf="@id/imgImportantLevelOne" />

    <ImageView
        android:id="@+id/imgImportantLevelThree"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/red_dot"
        app:layout_constraintBottom_toBottomOf="@id/imgImportantLevelTwo"
        app:layout_constraintStart_toEndOf="@id/imgImportantLevelTwo"
        app:layout_constraintTop_toTopOf="@id/imgImportantLevelTwo" />

    <TextView
        android:id="@+id/tvIsCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done "
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvImportantLevel"
        app:layout_constraintStart_toStartOf="@id/tvImportantLevel"
        android:layout_marginTop="20dp"/>

    <CheckBox
        android:id="@+id/cbComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:layout_constraintStart_toEndOf="@id/tvIsCompleted"
        app:layout_constraintTop_toTopOf="@id/tvIsCompleted"
        app:layout_constraintBottom_toBottomOf="@id/tvIsCompleted"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabUpdateTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:src="@drawable/ic_done"
        android:tintMode="@color/white"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>