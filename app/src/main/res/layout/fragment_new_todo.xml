<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.NewTodoFragment">

    <EditText
        android:id="@+id/etTodoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:hint="@string/type_task"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvImportantLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Important level "
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/etTodoTitle"
        app:layout_constraintTop_toBottomOf="@id/etTodoTitle" />

    <ImageView
        android:id="@+id/imgImportantLevelOne"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/yellow_dot"
        android:src="@drawable/ic_done"
        app:layout_constraintBottom_toBottomOf="@id/tvImportantLevel"
        app:layout_constraintStart_toEndOf="@id/tvImportantLevel"
        app:layout_constraintTop_toTopOf="@id/tvImportantLevel" />

    <ImageView
        android:id="@+id/imgImportantLevelTwo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/blue_dot"
        app:layout_constraintBottom_toBottomOf="@id/imgImportantLevelOne"
        app:layout_constraintStart_toEndOf="@id/imgImportantLevelOne"
        app:layout_constraintTop_toTopOf="@id/imgImportantLevelOne" />

    <ImageView
        android:id="@+id/imgImportantLevelThree"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/red_dot"
        app:layout_constraintBottom_toBottomOf="@id/imgImportantLevelTwo"
        app:layout_constraintStart_toEndOf="@id/imgImportantLevelTwo"
        app:layout_constraintTop_toTopOf="@id/imgImportantLevelTwo" />

    <ImageButton
        android:id="@+id/today_calendar_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@id/tvImportantLevel"
        app:layout_constraintTop_toBottomOf="@+id/tvImportantLevel"
        app:srcCompat="@drawable/ic_calendar"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/tvDueDate"
        android:layout_width="244dp"
        android:layout_height="33dp"
        android:layout_marginTop="48dp"
        android:gravity="center_horizontal"
        android:text="Due date"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/today_calendar_button" />

    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="318dp"
        android:layout_height="296dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDueDate"
        app:layout_constraintVertical_bias="0.16000003" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/calendar_group"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:constraint_referenced_ids="calendar_view,tvDueDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>